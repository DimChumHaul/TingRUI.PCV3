<UserControl x:Class="PCChageTermialV3.TingRUI.ModelViews.Pages.ChargingRulesSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PCChageTermialV3.TingRUI.ModelViews.Pages"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1024">
    <Grid>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FF9F9B16" Offset="1"/>
                <GradientStop Color="White" />
            </RadialGradientBrush>
        </Grid.Background>

        <Button Style="{DynamicResource SquareButtonStyle}" FontSize="22" FontFamily="微软雅黑"
                Margin="5 2.5 5 10" Padding="1"
                Content="WPF.子页面(使用第三方Metro模拟SDK.Page页)进行首页布局"/>
    </Grid>
</UserControl>
